<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="17dp">


    <TextView
        android:id="@+id/rv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="@string/note_title"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rv_item_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rv_item_time_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/note_time"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rv_item_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_item_title" />

    <TextView
        android:id="@+id/rv_item_firstLine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/note_line_first"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toStartOf="@+id/rv_item_word_count"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/rv_item_title"
        app:layout_constraintTop_toBottomOf="@id/rv_item_title" />

    <TextView
        android:id="@+id/rv_item_word_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_count"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rv_item_firstLine"
        app:layout_constraintRight_toLeftOf="@id/rv_item_word"
        app:layout_constraintTop_toTopOf="@id/rv_item_firstLine"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/rv_item_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="å­—"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rv_item_firstLine"
        app:layout_constraintTop_toTopOf="@id/rv_item_firstLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/rv_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/baseline_text_snippet_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_item_title"
        app:layout_constraintBottom_toBottomOf="@id/rv_item_firstLine"/>



</androidx.constraintlayout.widget.ConstraintLayout>