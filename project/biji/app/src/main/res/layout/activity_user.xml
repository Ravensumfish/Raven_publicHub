<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="notebook.activities.UserActivity">

    <notebook.View.GradientBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_user_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/btn_back_arrow_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/roundRectView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/bcg_white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_user_back"
        app:layout_constraintWidth_percent="0.87" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="48dp"
            app:shapeAppearanceOverlay="@style/CircleShape"
            android:src="@color/gray_blue"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/roundRectView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/roundRectView"
            />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="用户名"
        android:textColor="@color/gray_blue"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar" />


    <TextView
        android:id="@+id/tv_user_introduce"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:hint="签名"
        android:clickable="true"
        android:textColor="@color/gray_blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/roundRectView"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintRight_toRightOf="@+id/roundRectView"
        app:layout_constraintStart_toStartOf="@+id/user_username"
        app:layout_constraintTop_toBottomOf="@id/user_username"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/roundRectView2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/bcg_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundRectView"
        app:layout_constraintWidth_percent="0.87" />

    <TextView
        android:id="@+id/tv_user_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textColor="@color/gray_blue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/roundRectView2"
        app:layout_constraintEnd_toEndOf="@+id/roundRectView2"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="@+id/roundRectView2"
        app:layout_constraintTop_toTopOf="@+id/roundRectView2" />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="123456"
        android:maxLength="6"
        android:textColor="@color/gray_blue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/roundRectView2"
        app:layout_constraintStart_toEndOf="@id/tv_user_ID"
        app:layout_constraintTop_toTopOf="@+id/roundRectView2"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>