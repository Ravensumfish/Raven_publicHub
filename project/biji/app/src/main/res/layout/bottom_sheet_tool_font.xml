<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/gray_3"
    android:orientation="vertical">

<!--标题样式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tool_font_h1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/bcg_half_radius_white_left"
            android:src="@drawable/icon_h1"/>

        <ImageView
            android:id="@+id/tool_font_h2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@color/white"
            android:src="@drawable/icon_h2"/>
        <ImageView
            android:id="@+id/tool_font_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/bcg_half_radius_white_right"
            android:src="@drawable/icon_text"/>


    </LinearLayout>

<!--字体样式-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/tool_font_bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/bcg_half_radius_white_left"
            android:src="@drawable/icon_bold"/>

        <ImageView
            android:id="@+id/tool_font_italic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@color/white"
            android:src="@drawable/icon_italic"/>

        <ImageView
            android:id="@+id/tool_font_underline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@color/white"
            android:src="@drawable/icon_underline"/>

        <ImageView
            android:id="@+id/tool_font_hyphen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@color/white"
            android:src="@drawable/icon_hyphen"/>

        <ImageView
            android:id="@+id/tool_font_highlight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/bcg_half_radius_white_right"
            android:src="@drawable/icon_highlight"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/tool_font_textsize_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/bcg_half_radius_white_left"
            android:src="@drawable/icon_textsize"/>

        <ImageView
            android:id="@+id/tool_font_textsize_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@color/white"
            android:src="@drawable/baseline_add_24"/>

        <TextView
            android:id="@+id/tool_font_textsize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="字号"
            android:gravity="center"
            android:padding="5dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/tool_font_textsize_minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/bcg_half_radius_white_right"
            android:src="@drawable/baseline_horizontal_rule_24"/>


    </LinearLayout>







</LinearLayout>