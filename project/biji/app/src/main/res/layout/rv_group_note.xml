<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="17dp"
    android:background="@drawable/rv_item_background_selector">


    <TextView
        android:id="@+id/rv_group_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="@string/note_title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rv_group_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rv_group_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="文件数量"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rv_group_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_group_title" />

    <TextView
        android:id="@+id/rv_group_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="创建时间"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/rv_group_title"
        app:layout_constraintTop_toBottomOf="@id/rv_group_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="时创建"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/rv_group_create_time"
        app:layout_constraintTop_toBottomOf="@id/rv_group_title"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/rv_group_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_folder_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/rv_group_title"
        app:layout_constraintBottom_toBottomOf="@id/rv_group_create_time"/>



</androidx.constraintlayout.widget.ConstraintLayout>